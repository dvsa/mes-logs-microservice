{
  "name": "mes-logs-service",
  "version": "0.1.0",
  "author": "DVSA",
  "license": "MIT",
  "description": "A serverless microservice responsible reporting error logs from the mes-mobile-app",
  "homepage": "https://github.com/dvsa/mes-logs-service#README.md",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/dvsa/mes-logs-service.git"
  },
  "scripts": {
    "clean": "rimraf build artefacts",
    "compile": "rm -rf build && tsc",
    "lint": "eslint -c .eslintrc.js --ext .ts src",
    "lint:fix": "eslint --fix -c .eslintrc.js --ext .ts src",
    "package": "./package.sh",
    "prepush": "npm run security-scan && npm run lint && npm test",
    "security-scan": "git secrets --scan",
    "start": "npm run compile && sls offline start",
    "test": "npm run compile && jasmine",
    "test:jasmine-coverage": "nyc npm run test",
    "test:integration": "npm run compile && jasmine build/spec/logs-service.spec.js",
    "compile-no-emit": "tsc --noEmit -p ."
  },
  "dependencies": {
    "aws-sdk": "^2.1081.0",
    "moment": "^2.29.3"
  },
  "devDependencies": {
    "@types/aws-lambda": "^8.10.92",
    "@types/jasmine": "^3.10.3",
    "@types/node": "^14.17.5",
    "@types/sinon": "^10.0.11",
    "@types/supertest": "^2.0.11",
    "@typescript-eslint/eslint-plugin": "^5.12.1",
    "@typescript-eslint/eslint-plugin-tslint": "^5.12.1",
    "@typescript-eslint/parser": "^5.12.1",
    "aws-lambda-test-utils": "^1.3.0",
    "aws-sdk-mock": "^5.6.2",
    "eslint": "^8.9.0",
    "eslint-plugin-import": "^2.25.4",
    "husky": "^1.3.1",
    "jasmine": "^3.99.0",
    "jasmine-spec-reporter": "^7.0.0",
    "npm-run-all": "^4.1.5",
    "nyc": "^15.1.0",
    "rimraf": "^3.0.2",
    "serverless": "^1.83.3",
    "serverless-offline": "^4.10.6",
    "serverless-webpack": "^5.6.1",
    "sinon": "^11.1.2",
    "source-map-support": "^0.5.21",
    "supertest": "^6.2.2",
    "ts-loader": "^9.2.6",
    "ts-node": "^10.5.0",
    "tslint": "^6.1.3",
    "tslint-config-airbnb": "^5.11.2",
    "typemoq": "^2.1.0",
    "typescript": "^4.5.5",
    "webpack": "^5.69.1",
    "webpack-cli": "^4.9.2",
    "yamljs": "^0.3.0"
  },
  "nyc": {
    "require": [
      "ts-node/register"
    ],
    "reporter": [
      "lcov",
      "text-summary"
    ],
    "exclude": [
      "**/__mocks__/*",
      "**/__tests__/*"
    ],
    "exclude-after-remap": false,
    "sourceMap": true,
    "produce-source-map": true,
    "instrument": true
  },
  "husky": {
    "hooks": {
      "pre-push": "npm run security-scan && npm run lint && npm test",
      "pre-commit": "run-s lint:fix lint compile-no-emit"
    }
  },
  "bugs": {
    "url": "https://github.com/dvsa/mes-logs-service/issues"
  }
}
